<div class="product-detail">
  <h1>{{ product.name }}</h1>
  <p>{{ product.summary }}</p>
  {% if product.image %}
    <img src="{{ product.image }}" alt="{{ product.name }}" width="300" height="300">
  {% endif %}
  <a href="{{ url('<front>') }}" class="button">
    {{ 'Back to Home'|t }}
  </a>
</div>
